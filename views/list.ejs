<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todolist</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="box" id="heading">
        <h1><%= kindofday %> </h1>

    </div>
    <div class="box ">    
   <% newListitem.forEach(function (item){ %>
        <form action="/delete" method="post">
          
            <div class="item">
                <input type="checkbox" name="check" value="<%= item._id%>" onchange="this.form.submit()">
                  <p> <%= item.name %></p>
              </div> 
             <input type="hidden" name="listName" value="<%= kindofday %>"> </input>
        </form>
       

  <% }) %>
     

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="Add a List" autocomplete="off" >
    <button type="submit" name="button" value="<%= kindofday %>">+</button>
</form>
</div>


  
</body>
</html>